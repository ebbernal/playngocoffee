@model CoffeeApplication.Models.Ingredient

@{
    ViewData["Title"] = "Edit";
}

<h2>Order more ingredients</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="orderIngredient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Name" value="Double Americano" class="form-control" id="dblamericano" />
                <label>Order how many container<font color="red">*</font></label>
                <p>1 container is equivalent to 15 units</p>
                <input asp-for="Container" class="form-control required" required/>
                <br />
                <input type="submit" id="submitbtn" value="Order Now" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>@ViewBag.testID</p>
    <p>@ViewBag.testValue</p>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
