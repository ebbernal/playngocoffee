@model CoffeeApplication.Models.Order


@{
    ViewData["Title"] = "NewOrder";
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];
}

<h2>Menu</h2>
<br>
<h4>Coffee</h4>

<table class="table">
    <tbody>
        <tr>
            <td>
                <dl>
                    <dt>Double Americano</dt>
                    <dd>Coffee Bean - 3 units</dd>
                </dl>
            </td>
            <td>
                <dl>
                    <dt>Sweet Latte</dt>
                    <dd>Coffee Bean - 2 units</dd>
                    <dd>Sugar - 5 units</dd>
                    <dd>Milk - 3 units</dd>
                </dl>
            </td>
            <td>
                <dl>
                    <dt>Flat White</dt>
                    <dd>Coffee Bean - 2 units</dd>
                    <dd>Sugar - 1 units</dd>
                    <dd>Milk - 4 units</dd>
                </dl>
            </td>
        </tr>
        <tr>
            <td>
                <form asp-action="Create" id="orderForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Name" value="Double Americano" class="form-control" id="dblamericano" />
                        <label>Enter your name<font color="red">*</font></label>
                        <input asp-for="Customer" class="form-control required" data-val-required="Customer name is required." />
                        <br />
                        <label class="field-validation-valid" data-valmsg-replace="true"
                              data-valmsg-for="Customer"></label><br>
                        <input type="submit" id="submitbtn" value="Order Now" class="btn btn-default" />
                    </div>
                </form>
            </td>
            <td>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Name" value="Sweet Latte" class="form-control" />
                        <label>Enter your name<font color="red">*</font></label>
                        <input asp-for="Customer" class="form-control required" data-val-required="Customer name is required." />
                        <br />
                        <label class="field-validation-valid" data-valmsg-replace="true"
                               data-valmsg-for="Customer"></label><br>
                        <input type="submit" value="Order Now" class="btn btn-default" />
                    </div>
                </form>
            </td>
            <td>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Name" value="Flat White" class="form-control" />
                        <label>Enter your name<font color="red">*</font></label>
                        <input asp-for="Customer" class="form-control required" data-val-required="Customer name is required." />
                        <br />
                        <label class="field-validation-valid" data-valmsg-replace="true"
                               data-valmsg-for="Customer"></label><br>
                        <input type="submit" value="Order Now" class="btn btn-default" />

                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>


@if (!string.IsNullOrEmpty(type))
{
    <div class="alert alert-@type alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>@title</strong> @body
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}